@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FantasyStore.WebApp.ViewModels.RegisterModel
@Html.ValidationSummary(true)
<div class="container">
    <div class="row" style="min-height: 800px;">
        <div class="panel panel-default" style="width:350px;">
            <div class="panel-body">
                Atualizar cadastro
            </div>
            <div class="panel-footer">
                @Html.Raw(@ViewBag.Confirmation)
                @using (Html.BeginForm())
                {
                    <label>Nome</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @style = "width:500px;" })
                    @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "validation-errors" })<br />
                    <label>Sobrenome</label>
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @style = "width:500px;" })
                    @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "validation-errors" })<br />
                    <label>CPF</label>
                    @Html.TextBoxFor(m => m.Document, new { @class = "form-control", @style = "width:500px;" })
                    @Html.ValidationMessageFor(m => m.Document, null, new { @class = "validation-errors" })<br />
                    <label>Data de nascimento</label>
                    @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @style = "width:500px;"})
                    @Html.ValidationMessageFor(m => m.BirthDate, null, new { @class = "validation-errors" })<br />
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width:500px;" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "validation-errors" })<br />
                    <a href="/Auth/ChangePassword">Mudar minha senha</a><br/><br />
                    <p>
                        <button class="btn btn-primary" type="submit">Atualizar</button>
                    </p>
                }

            </div>

        </div>
    </div>
</div>
