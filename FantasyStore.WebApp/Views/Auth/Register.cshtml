@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model FantasyStore.WebApp.ViewModels.RegisterModel
@Html.ValidationSummary(true)
<div class="container">
    <div class="row" style="min-height: 800px;">
        <div class="panel panel-default" style="width:350px;">
            <div class="panel-body">
                Registrar
            </div>
            <div class="panel-footer">
                @using (Html.BeginForm())
                {
                    <div style="float:left; margin-right: 30px;">
                        <label>Nome</label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @style = "width:500px;", @placeholder = "Entre com o nome" })
                        @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "validation-errors" })<br />
                    </div>
                    <div>
                        <label>Sobrenome</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @style = "width:500px;", @placeholder = "Entre com o sobrenome" })
                        @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "validation-errors" })<br />
                    </div>
                    <label>CPF</label>
                    @Html.TextBoxFor(m => m.Document, new { @class = "form-control", @style = "width:500px;", @placeholder = "Entre com o CPF" })
                    @Html.ValidationMessageFor(m => m.Document, null, new { @class = "validation-errors" })<br />
                    <label>Data de nascimento</label>
                    @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @style = "width:500px;", @placeholder = "Entre com a data de nascimento" })
                    @Html.ValidationMessageFor(m => m.BirthDate, null, new { @class = "validation-errors" })<br />
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width:500px;", @placeholder = "Entre com o email" })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "validation-errors" })<br />
                    <label>Senha</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "width:500px;", @placeholder = "Entre com a senha" }) 
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "validation-errors" })<br />
                    <label>Digite novamente a senha</label>
                    @Html.PasswordFor(m => m.ConfirmedPassword, new { @class = "form-control", @style = "width:500px;", @placeholder = "Confirme a senha" }) 
                    @Html.ValidationMessageFor(m => m.ConfirmedPassword, null, new { @class = "validation-errors" })<br />
                    <p>
                        <button class="btn btn-primary" type="submit">Cadastrar</button>
                    </p>
                }

            </div>

        </div>
    </div>
</div>
