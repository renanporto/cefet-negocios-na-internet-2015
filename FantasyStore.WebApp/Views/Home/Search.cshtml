@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    img {
        width: 220px;
        height: 220px;
    }
</style>
<h2>Resultados de busca</h2> <br />

@if (@ViewBag.SearchResult != null)
{

    foreach (var product in @ViewBag.SearchResult)
    {
        <div class="col-md-3 product-wrapper">
            <a href="/Home/Products/@product.Id">
                <img src="@product.ImageUrl" alt="@product.ImageName" />
            </a>
            <div class="product-info">
                <p>
                    <a href="/Home/Products/@product.Id"><span class="product-name">@product.Name</span></a>
                    <a href="/Home/Products/@product.Id"><span class="glyphicon glyphicon-plus" aria-hidden="true" style="margin-left: 6px;"></span></a>
                    <br />
                    <span class="price-from">De: R$ @product.PriceFrom</span>
                    <br />
                    <span class="price-to">Por: R$ @product.PriceTo</span>
                    <span style="margin-left: 20px;">
                        <button class="btn btn-primary btn-xs">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><span style="margin-left: 5px;">Comprar</span>
                        </button>
                    </span>
                    <br />
                </p>
            </div>
            <br /><br />
        </div>

    }
}
else
{
    @ViewBag.NotFoundMessage
    @ViewBag.Error
}
